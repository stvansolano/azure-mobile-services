@{
<section id="preview" ng-app="app" data-ng-controller="moments">
    <form name="form" novalidate="" class="form-horizontal">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-btns" style="display: none;">
                    <a href="" class="panel-minimize tooltips" data-toggle="tooltip" title="" data-original-title="Minimize Panel"><i class="fa fa-minus"></i></a>
                    <a href="" class="panel-close tooltips" data-toggle="tooltip" title="" data-original-title="Close Panel"><i class="fa fa-times"></i></a>
                </div>
                <h3 class="panel-title"><b>Share a Moment</b></h3>
            </div>
            <div class="panel-body">
                <div class="form-group" ng-class="{ 'has-error' : !form.from.$pristine &amp;&amp; form.from.$error.required }">
                    <label for="from" class="col-sm-4 control-label">
                        From:
                        <span ng-show="form.from.$invalid &amp;&amp; !form.from.$pristine" class="hasError ng-hide">*</span>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" name="from" required="" class="form-control" data-ng-model="model.from">
                    </div>
                </div>

                <div class="form-group" ng-class="{ 'has-error' : !form.recipients.$pristine &amp;&amp; (form.recipients.$error.required || form.recipients.$error.recipients) }">
                    <label for="recipients" class="col-sm-4 control-label">
                        To:
                        <span ng-show="!form.recipients.$pristine &amp;&amp; (form.recipients.$error.required || form.recipients.$error.recipients)" class="hasError ng-hide">*</span>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" name="recipients" required="" class="form-control" data-ng-model="model.recipients">
                    </div>
                </div>

                <div class="form-group" ng-class="{ 'has-error' : !form.theFile.$pristine &amp;&amp; form.theFile.$error.required }">
                    <label for="theFile" class="col-sm-4 control-label">
                        Image
                        <span ng-show="!form.theFile.$pristine &amp;&amp; form.theFile.$error.required" class="hasError ng-hide">*</span>
                    </label>
                    <div class="col-sm-8">
                        <input type="file" name="theFile" class="form-control" data-file="model.theFile">
                    </div>
                </div>
                <br />
            </div>
            <div class="panel-footer">
                <button type="submit" class="btn btn-primary mr5" data-ng-click="send(model)">Send</button>
                <button type="reset" class="btn btn-default">Clear</button>
            </div>
        </div>
    </form>
</section>
}
